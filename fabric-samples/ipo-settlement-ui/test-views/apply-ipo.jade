                            .form-group 
                                label(for="acctholder") Account Holder Name
                                input.form-control(type="text")  
                        .col-4
                            .form-group 
                                label(for="ifsc") Bank IFSC
                                input.form-control(type="text")  

                    .row.mt-5 
                        h6 Bids 
                        .col-4
                            .form-group 
                                label(for="qty") Qty.
                                input.form-control(type="text")  
                        .col-4
                            .form-group 
                                label(for="price") Price
                                input.form-control(type="text")  

                    .row.mt-5

                        .col-2
                            p.text-color Amount Payable

                        .col-8 

                        .col-2 
                            p.color Rs. 12000


                    .row 

                        .col-2 
                            button.button.btn-lg(type="submit") Close
