extends layout

block content
    .container 
        .row 
            .col-1
            .col-10
                div
                    .row
                        .col-10 
                        .col-2
                            .person-icon
                                i.bi.bi-person-square
                div 
                    //- .row 
                    //-     .col-1 
                    //-     .col-6
                    h5 YPLUS
                    P.text-color Yodaplus Technologies Pvt. Ltd.

                    p.color Investor Type
