extends layout

block content
    #data
        if data != undefined && data.length > 0
            for item in data
                div.row
                    div.col-6
                        div.card.mt-5.mb-5(style="width: 18rem;")
                            ul.list-group.list-group-flush
                                input#custId(type='hidden' name='custId' value=`${item.Key}`)
                                li.list-group-item.h3.bg-primary #{item.Record.M1.ipoInfo.issuer_name} IPO
                        a.btn.btn-lg.btn-primary(href='/invoke') Apply Now
                    div.col-6
                        div.card.mt-5.mb-5.bg-primary(style="width: 30rem;")
                            ul.list-group.list-group-flush
                                //- for share in item
                                li.list-group-item.h3 Minimum Order Quantity  #{item.Record.M1.ipoInfo.lot_size}    
                                li.list-group-item.h3 Price Range  #{item.Record.M1.ipoInfo.priceRangeLow}  -  #{item.Record.M1.ipoInfo.priceRangeHigh}     
        
script(src='/bootstrap/js/bootstrap.bundle.js')
