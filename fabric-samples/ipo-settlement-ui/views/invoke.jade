extends layout

block content
    div.container            
        .row 
            .col-2 
            .col-8
                if data
                    .alert.alert-info(role='alert') #{data}

                
                
                .card.border-primary
                    .card-body
                        .card-header.h3.bg-primary(style="text-align:center;") Bid Shares
        
                        
                        form.mt-5(action="/actionInvoke",method="post")
                            div.form-group
                                input#custId(type='hidden' name='custId' value=`${id}`)
                                label(for="lotQuantity")  Lot Quantity 
                                input.form-control(type="number",id="lotQuantity",name="lotQuantity" required)
                            div.form-group
                                label(for="bidperShare")  Bid Per Share 
                                input.form-control(type="number",id="bidperShare",name="bidperShare" required)
                            button.btn.btn-primary(type="Submit") Submit Bid

script(src='/bootstrap/js/bootstrap.bundle.js') 
